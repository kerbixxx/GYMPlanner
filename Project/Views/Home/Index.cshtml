@{
    ViewData["Title"] = "Home Page";
}

<div class="gridcontainer">
    <div class="container">
        <h1>Планы</h1>
        <a class="link-primary" asp-area="" asp-controller="Plan" asp-action="Index">Просмотр планов</a>
    </div>
    <div class="container">
        <h1>Чат</h1>
        <a class="link-primary" asp-area="" asp-controller="Chat" asp-action="ChatRoom">Перейти в чат</a>
    </div>
    <div class="container">
        <h1>Профиль</h1>
        <a class="link-primary" asp-route-name="@User.Identity.Name" asp-area="" asp-controller="Profile" asp-action="Index">Перейти в профиль</a>
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="container">
            <h1>Пользователи</h1>
            <a class="link-primary" asp-area="" asp-controller="User" asp-action="Index">Список пользователей</a>
        </div>
    }
</div>