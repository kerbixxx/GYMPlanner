@using GymPlanner.Domain.Entities.Identity;
@model List<User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Список пользователей</h2>
        </div>
    </div>

    <br /><br />    

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <td>Почта</td>
                    <td>Роль</td>
                    <td>Кнопки управления</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Email</td>
                        <td>@obj.Role.Name</td>
                        <td>
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Редактировать</a>
                            <button class="btn btn-danger mx-2">Удалить</button>
                            <button  class="btn btn-danger mx-2">Заблокировать</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            Пользователей не существует
        </p>
    }
</div>