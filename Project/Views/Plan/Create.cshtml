@using GymPlanner.Domain.Entities.Plan;
@model Plan

<form method="post" asp-action="Create">
    <div class="border p3">
        <div class="form-group row">
            <h2 class="p1-3">Добавить план</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Создать" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100">Назад</a>
                </div>
            </div>
        </div>
    </div>
</form>

@{
}
