@using GymPlanner.Domain.Entities.Plan;
@model Plan

<form method="post" asp-action="Edit">
    <div class="border b3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="p1-3">Редактирование плана</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Index" class="btn btn-primary w-50">Назад</a>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-16">
                <table class="table table-bordered border-primary" style="width:100%">
                    <thead>
                        <tr>
                            <td>Упражнения/Дни</td>
                            @for (int i = 0; i < Model.planExcersiseFrequencies.Select(p=>p.Frequency).Count(); i++)
                            {
                                <input asp-for="@Model.planExcersiseFrequencies[i].Frequency.Id" hidden>
                                <td><input asp-for="@Model.planExcersiseFrequencies[i].Frequency.Name" /></td>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.planExcersiseFrequencies.Select(p=>p.Excersise).Count(); i++)
                        {
                            <tr>
                                <td><input asp-for="@Model.planExcersiseFrequencies[i].Excersise.Name" /></td>
                                <input asp-for="@Model.planExcersiseFrequencies[i].Excersise.Id" hidden/>
                                @for (int j = 0; j < Model.planExcersiseFrequencies.Select(p=>p.Frequency).Count(); j++)
                                {
                                    <input asp-for="@Model.planExcersiseFrequencies[j].Frequency" hidden/>
                                    <input asp-for="@Model.planExcersiseFrequencies[j].FrequencyId" hidden/>
                                    <input asp-for="@Model.planExcersiseFrequencies[j].Excersise" hidden/>
                                    <input asp-for="@Model.planExcersiseFrequencies[j].ExcersiseId" hidden/>
                                    <input asp-for="@Model.planExcersiseFrequencies[j].PlanId" hidden/>
                                    <input asp-for="@Model.planExcersiseFrequencies[j].Id" hidden/>
                                    <td><input asp-for="@Model.planExcersiseFrequencies[j].Description" /></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-12">
                        <button type="button" id="addRow" class="btn btn-secondary">Добавить упражнение</button>
                        <button type="button" id="addColumn" class="btn btn-secondary">Добавить частоту</button>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Обновить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        //Этот код нуждается в правках. Может быть вообще переписан полностью.
        document.addEventListener('DOMContentLoaded', function () {
            var addRowButton = document.getElementById('addRow');
            var addColumnButton = document.getElementById('addColumn');
            var table = document.querySelector('.table');
            var rowCount = table.rows.length;
            var columnCount = table.rows[0].cells.length;

            addRowButton.addEventListener('click', function () {
                var newRow = table.insertRow(-1);
                var newCell = newRow.insertCell(0);
                newCell.innerHTML = '<input type="text" name="planExcersiseFrequencies[' + rowCount + '].Excersise.Name" />';

                for (var i = 1; i < columnCount; i++) {
                    var newCell = newRow.insertCell(i);
                    newCell.innerHTML = '<input type="text" name="planExcersiseFrequencies[' + rowCount + '].Description" />';
                }

                rowCount++;
            });

            addColumnButton.addEventListener('click', function () {
                for (var i = 0; i < rowCount; i++) {
                    var newCell = table.rows[i].insertCell(-1);
                    newCell.innerHTML = '<input type="text" name="planExcersiseFrequencies[' + i + '].Description" />';
                }

                columnCount++;
            });
        });
    </script>

}