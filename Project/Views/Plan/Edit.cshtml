@using GymPlanner.Application.Models.Plan;
@model PlanEditDto

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<form method="post" asp-action="Edit">
    <div class="border b3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="p1-3">Редактирование плана</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Index" class="btn btn-primary w-50">Назад</a>
            </div>
        </div>

        <br /><br />

        <div class="row">
            <div class="col-16">
                <table class="table table-bordered border-primary" style="width:100%">
                    <thead>
                        <tr>
                            <td>Упражнения/Дни</td>
                            @for (int i = 0; i < Model.Frequencies.Count; i++)
                            {
                                <td><input asp-for="@Model.Frequencies[i].Name"></td>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Excersises.Count; i++)
                        {
                            <tr>
                                <td><input asp-for="@Model.Excersises[i].Name"/></td>
                                @for(int j = 0; j < Model.Frequencies.Count; j++)
                                {
                                    <td><input asp-for="@Model.ExerciseFrequencies[i].Description"/></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-12">
                        <button type="button" id="addRow" class="btn btn-secondary">Добавить упражнение</button>
                        <button type="button" id="addColumn" class="btn btn-secondary">Добавить частоту</button>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Обновить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#addRow').click(function () {
                $.get('/Plan/AddExcersiseModal', function (data) {
                    $('dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        });
    </script>
}